{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "build OpenGL.vcxproj (Debug x64)",
			"type": "shell",
			"command": "msbuild",
			"args": [
				"OpenGL.vcxproj",
				"/p:Configuration=Debug",
				"/p:Platform=x64"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		}
	],
	"version": "2.0.0"
}